#:import Factory kivy.factory.Factory

<ScreenManagement>:
    LessonListScreen:
        id:screen1
        name: 'lessons'
    LessonTitleScreen:
        name: 'title'
    LessonFactualScreen:
        name: 'factual'
    LessonApplyScreen:
        name: 'apply'
    LessonAssessScreen:
        name: 'assess'
<ImportPop>
    text_userid: user.text
    text_classid: classid.text
    text_lessonid: lesson.text
    orientation: 'vertical'
    GridLayout:
        cols:2
        row_force_default:True
        row_default_height:40
        padding:[30,30,30,30]
        spacing:[20,20]
        Label:
            text:"User ID"
            size_hint_x:0.2

        TextInput:
            id:user
            write_tab: False
            multiline: False
            size_hint_x:0.3

        Label:
            text:"Class ID"
            size_hint_x:0.2

        TextInput:
            id:classid
            write_tab: False
            multiline: False
            size_hint_x:0.3

        Label:
            text:"Lesson ID"
            size_hint_x:0.2

        TextInput:
            id:lesson
            write_tab: False
            multiline: False
            size_hint_x:0.3



        Button:
            text: 'Submit'
            size_hint_x:0.2
            on_release: root.import_lesson()
            background_color:[0.76,0.83,0.86,0.8]

        Button:
            text: 'Cancel'
            size_hint_x:0.2
            on_release: root.close_pop()
            background_color:[0.76,0.83,0.86,0.8]
    Label:
        text: root.text_status




<LessonListScreen>

    container: container
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                ActionButton:
                    text: ' Import Lesson '
                    on_press: root.launch_popup()

        ScrollView:
            #do_scroll_x: False
            #do_scroll_y: True
            #size_hint: (1, None)
            #size:(800,850)
            size_hint: (1, .9)
            #bar_width: 10
            #bar_color: 1, 0, 0, 1   # red
            #bar_inactive_color: 0, 0, 1, 1   # blue
            effect_cls: "ScrollEffect"
            #scroll_type: ['bars']

            BoxLayout:
                id: container
                orientation: 'vertical'
                size_hint_y:None


<LessonTitleScreen>
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    with_previous: True
                    on_release: root.set_previous_screen()
                ActionButton:
                    text: ' Next '
                    on_release:root.set_next_screen()


        BoxLayout:
            orientation:'vertical'
            spacing: 30
            Label:
                text: root.text_label_2
                size_hint: (1,0.1)
                font_size:20
            Image:
                source:root.text_image
                size: 350, 350 / self.image_ratio
                size_hint: (1,0.7)
            ScrollView:
                id: scrlv
                size_hint:(1,0.3)

                #TextInput:
                Label:
                    #size_hint:(1,None)
                    font_size:18
                    #foreground_color:[1,1,1,1]
                    background_color:[0.76,0.83,0.86,0.8]
                    #multiline:True
                    #readonly:True
                    #height: max(self.minimum_height, scrlv.height)
                    #text_size: self.width, None
                    #height: self.texture_size[1]
                    text:root.text_label_1
                    size_hint_y: None
                    halign:"center"
                    text_size: self.width, None
                    height: self.texture_size[1]
            Button:
                size_hint : (0.15,0.1)
                pos_hint : {'x':0.42}
                text: "Read Aloud"
                background_color:[0.76,0.83,0.86,0.8]
                on_release:root.read_intro()

<LessonFactualScreen>
    car : car
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    with_previous: True
                    on_release: root.set_previous_screen()
                ActionButton:
                    text: ' Next '
                    on_release:root.set_next_screen()
        Carousel:
            id:car
            on_touch_move: root.slide_moved()
            BoxLayout:
                orientation:'vertical'
                Image:
                    source:root.text_image_1
                    size: 400, 400 / self.image_ratio
                    size_hint: (1,0.7)
                ScrollView:
                    size_hint:(1,0.3)
                    Label:
                        text:root.text_term_description_1
                        text_size: self.width, None
                        #size: self.texture_size
                        height: self.texture_size[1]
                        halign:"center"
                        valign:"top"

            BoxLayout:
                orientation:'vertical'
                Image:
                    size: 400, 400 / self.image_ratio
                    size_hint: (1,0.7)
                    source:root.text_image_2
                ScrollView:
                    size_hint:(1,0.3)
                    Label:
                        size_hint:(1,0.3)
                        text:root.text_term_description_2
                        text_size: self.width, None
                        height: self.texture_size[1]
                        halign:"center"
                        valign:"top"

            BoxLayout:
                orientation:'vertical'
                Image:
                    source:root.text_image_3
                    size: 400, 400 / self.image_ratio
                    size_hint: (1,0.7)
                ScrollView:
                    size_hint:(1,0.3)
                    Label:
                        size_hint:(1,0.3)
                        text:root.text_term_description_3
                        text_size: self.width, None
                        height: self.texture_size[1]
                        halign:"center"
                        valign:"top"
        Button:
            size_hint : (0.15,0.07)
            pos_hint : {'x':0.42}
            text: "Read Aloud"
            background_color:[0.76,0.83,0.86,0.8]
            on_release:root.read_aloud()

<LessonApplyScreen>
    steps: steps
    images: images
    BoxLayout:

        orientation: 'vertical'
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    with_previous: True
                    on_release: root.set_previous_screen()
                ActionButton:
                    text: ' Next '
                    on_release:root.set_next_screen()



        BoxLayout:


            ScrollView:
                id: scrlv1
                size_hint: (0.5, 1)
                BoxLayout:
                    orientation:'vertical'
                    pos_hint: {'top': 1}

                    id: steps
                    size_hint_y:None
                    height: max(self.minimum_height, scrlv1.height)
                    Widget:

            ScrollView:
                id:scrlv2
                size_hint: (0.5, 1)
                BoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    id:images
                    height: max(self.minimum_height, scrlv2.height)


<LessonAssessScreen>
    text_label_2: txt.text
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    with_previous: True
                    on_release: root.set_previous_screen()
                ActionButton:
                    text: ' Done '
                    on_release:root.set_next_screen()
        ScrollView:
            id: scrlv1
            size_hint:(1,0.5)
            Label:
                size_hint:(1,None)
                text:root.text_label_1
                text_size:(400,None)
                font_size:20
                height: self.texture_size[1]



        ScrollView:
            padding:[20,20,20,20]
            id: scrlv
            size_hint:(1,0.5)
            TextInput:
                id:txt
                size_hint:(1,None)
                font_size:20
                multiline:True
                text_size: self.width, None
                height: max(self.minimum_height, scrlv.height)
                text:root.text_label_2
        GridLayout:
            padding:[30,30]
            size_hint:(1,0.2)
            cols: 2
            row_force_default:True
            row_default_height:40
            Button:
                size_hint:(1,0.2)
                text:"Save"
                on_release: root.on_save()
                background_color:[0.76,0.83,0.86,0.8]
            Button:
                size_hint:(1,0.2)
                text:"Copy Answer"
                background_color:[0.76,0.83,0.86,0.8]
                on_release: root.on_share()

